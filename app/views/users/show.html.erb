<p>
<%= flash[:notice] %>
</p>

<div class="container px-5 px-sm-0">
  <div class="row">
        <div class="col-md-3">
           <%= render 'books/info', user: @user %>  
        </div>  
          
            <!--ユーザーの投稿一覧-->
        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
              </tr>  
             </thead> 
            
             <tbody>
               <tr>
                <% @books.each do |book| %>
              
              
                <td>
                  <%= link_to user_path(@user) do %>
                   <%= image_tag @user.get_profile_image(80,80) %> <br>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(book) do %>
                    <%= book.title %>
                  <% end%>
                </td>
                <td>
                   <%= book.body %>
                </td>
                 
              
              </tr>
              <% end %>
              
              
       
              </table>
            </tbody>
         
         
          </div>
           
           
  </div>      
</div>

















